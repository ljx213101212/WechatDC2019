<!--pages/my_orders/my_orders.wxml-->
<view class='my_orders_page'>
  <scroll-view scroll-y style="height: 100%;">
    <view class='orderView' wx:for="myOrders" wx:key="_id" bindtap='onPressOrderView'>
      <view class='orderHeader'>
        <view class='orderTitle'>魔幻-现实 达利艺术展</view>
        <view class='orderStatus'>交易完成</view>
      </view>
      <view class='orderBody'>
        <view class='eventInfoStack'>
          <view class='eventTime'>2018.07.20 10:00</view>
          <view class='eventLocation'>上海展览中心</view>
          <view class='eventPrice'>￥99.00/共1张</view>
        </view>
        <view class='orderThumbnailView'>
          <image class='orderThumbnail' src="{{item.imageUrl}}"></image>
        </view>
      </view>
    </view>
  </scroll-view>
</view>

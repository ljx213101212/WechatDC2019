/* pages/eventDetail/eventDetail.wxss */
.buyTicketComponent{
  padding-bottom: 100rpx;
}
.detial-event-name{
  color:white;
}
.event-like image{
  width: 20px;
  height: 20px;
}
.event-detail-description{
  margin: 10px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 13px;
}
.header{
    /* border:solid 1rpx #ccc; */
    padding: 20rpx 30rpx;
    background: linear-gradient(rgb(4, 33, 129),rgba(215, 240, 255, 0.959));
}

.buyTicketComponent .eventInfo .content{
    height: auto;
    max-height: 600rpx;
    overflow-Y: scroll;
    padding: 20rpx;
    font-size: 30rpx;
}

.buyTicketComponent .purchaseButtonView{
  position: fixed;
  bottom: 0;
  text-align: center;
  background-color: #ffffff;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #eeeeee;
  display: inline-block;
}

.purchaseButton{
  width: 70%;
  border-radius: 50rpx;
  height: 80%;
  float: right;
  border: none;
  background:linear-gradient(30deg,#558ED5,rgb(4, 33, 129));
  color: white;
  margin: 10rpx 5rpx;
}

.eventImage{
  border-radius: 3px;
  outline: none;
  width: 100px;
  height: 150px;
}

.eventTimeStamp{
  align-items:center;
  background-color: rgb(240, 240, 240);
  margin: 0;
  height: 100rpx;
  font-size: 30rpx;
  padding: 0rpx 20rpx;
}
.eventAddress{
  align-items:center;
  margin: 0;
  padding: 0rpx 20rpx;
  border-bottom: 20rpx solid rgb(240, 240, 240)
}
.eventAddressText{
  margin-left:20rpx; flex:1;
  font-size: 25rpx;
}
.EventHeader{
  border-bottom: 1rpx solid rgb(240, 240, 240);
  height: 60rpx;
  font-size: 45rpx;
  padding: 30rpx 0;
  vertical-align: middle;
  line-height: 100%;
}
.shareView{
  display: inline-block;
  width: 10%;
  margin: 10rpx 0;
  height: 80%;
  padding: 10rpx 0;
}
.shareImg{
  width: 50rpx;
  height: 50rpx

}
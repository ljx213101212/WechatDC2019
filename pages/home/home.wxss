.event-category-board{
  background-color:#f9f9f9;
  padding-bottom: 10px;
}

.event-category-title{
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  font-size: 25px;
  line-height: 60px;
  padding: 40px 8px;
}

.eventTypeScrollView{
  height: 100rpx;
  display: inline-block;
}
.eventsListScrollView{
  width: 100%;
  display: "flex";
  white-space: nowrap;
  padding-top: 10px;
  background-color: whitesmoke;
}
.eventListScrollView{
  padding-left: 50rpx;
}
.eventThumbnailView{
  width: 280rpx;
  display: inline-flex;
  flex-direction: column;
  font-size:0;
  /* margin-left: 15rpx; */
  white-space: normal;
}

.event-profile-price{
  justify-self: baseline;
}

.eventImage{
  clear: both;
  width: 100%;
  height: 400rpx;
  border-radius: 2px;
}
.eventTitle{
  font-size: 20rpx;
  font-weight: bold;
}
.eventPrice{
  font-size: 20rpx;
}


.event-profile-wrapper{
  text-align: center;
  /* display: flex; */
}

.loader {
  border: 10rpx solid #f3f3f3; /* Light grey */
  border-top: 10rpx solid #555; /* Blue */
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  animation: spin 3s linear infinite;
  margin:0 auto;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
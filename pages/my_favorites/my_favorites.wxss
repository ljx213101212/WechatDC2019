/* pages/my_favorites/my_favorites.wxss */

.my_orders_page {
  background-color: rgb(240, 240, 240);
  height: 100%;
}

.orderView {
  background-color: white;
  border-radius: 15rpx;
  margin: 50rpx 30rpx;
  padding: 25rpx;
  display: block;
  height: 300rpx;
}

.orderHeader {
  padding: 10rpx 0;
  border-bottom: 1rpx solid lightgray;
}

.orderTitle {
  display: inline-block;
}

.orderStatus {
  float: right;
}

.orderBody {
  font-size: 25rpx;
  margin-top: 5rpx;
}

.eventInfoStack {
  display: inline-block;
  vertical-align: top;
}

.eventTime {
  display: block;
}

.eventLocation {
  display: block;
}

.eventPrice {
  display: block;
}

.orderThumbnailView {
  float: right;
  vertical-align: top;
}

.orderThumbnail {
  height: 200rpx;
  width: 150rpx;
}
